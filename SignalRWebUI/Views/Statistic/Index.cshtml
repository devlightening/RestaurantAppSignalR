@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<!-- Script Referansları -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>

<!-- Font Awesome ve Ek Stiller -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

<style>
    :root {
        --primary-color: #000;
        --secondary-color: #333;
        --success-color: #27ae60;
        --info-color: #3498db;
        --warning-color: #f39c12;
        --danger-color: #e74c3c;
        --light-bg: #f8f9fa;
        --card-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        --card-hover-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: var(--primary-color);
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 2rem 0;
    }

    .page-header,
    .card,
    .connection-status,
    .section-group {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        box-shadow: var(--card-shadow);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: var(--primary-color);
    }

    .page-header {
        padding: 2rem;
        margin-bottom: 2rem;
    }

    .page-title {
        font-weight: 700;
        font-size: 2.5rem;
        text-align: center;
        margin: 0;
    }

    .section-title {
        font-weight: 600;
        font-size: 1.5rem;
        margin-bottom: 1.5rem;
        padding-left: 1rem;
        border-left: 4px solid var(--info-color);
    }

    .card {
        position: relative;
        overflow: hidden;
        border: none;
        margin-bottom: 1.5rem;
        border-radius: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--card-color), transparent);
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: var(--card-hover-shadow);
        }

    /* Card color variants */
    .card-primary::before {
        --card-color: var(--info-color);
    }

    .card-success::before {
        --card-color: var(--success-color);
    }

    .card-warning::before {
        --card-color: var(--warning-color);
    }

    .card-danger::before {
        --card-color: var(--danger-color);
    }

    .card-secondary::before,
    .card-dark::before {
        --card-color: var(--primary-color);
    }

    .card-info::before {
        --card-color: var(--info-color);
    }

    .card-body {
        padding: 2rem;
        color: var(--primary-color);
    }

    .card-icon {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }

    /* Card icon background variants */
    .card-primary .card-icon,
    .card-info .card-icon {
        background: linear-gradient(135deg, var(--info-color), #5dade2);
    }

    .card-success .card-icon {
        background: linear-gradient(135deg, var(--success-color), #58d68d);
    }

    .card-warning .card-icon {
        background: linear-gradient(135deg, var(--warning-color), #f7dc6f);
    }

    .card-danger .card-icon {
        background: linear-gradient(135deg, var(--danger-color), #f1948a);
    }

    .card-secondary .card-icon,
    .card-dark .card-icon {
        background: linear-gradient(135deg, var(--secondary-color), #85929e);
    }

    /* Force black text on icons */
    .card-icon {
        color: var(--primary-color);
    }

    .card-category {
        font-size: 0.9rem;
        font-weight: 500;
        margin-bottom: 0.5rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: var(--primary-color) !important;
    }

    .card-title {
        font-size: 1.8rem;
        font-weight: 700;
        margin: 0;
        color: var(--primary-color);
    }

    .section-group {
        padding: 2rem;
        margin-bottom: 2rem;
        border-radius: 20px;
    }

    .connection-status {
        padding: 1.5rem;
        text-align: center;
        margin-top: 2rem;
    }

    .badge-info {
        background: linear-gradient(135deg, var(--info-color), #5dade2);
        color: var(--primary-color);
        padding: 0.5rem 1.5rem;
        border-radius: 25px;
        font-weight: 600;
        font-size: 1rem;
        box-shadow: 0 2px 10px rgba(52, 152, 219, 0.3);
    }

    .pulse {
        animation: pulse 2s infinite;
    }

    .icon-big {
        font-size: 2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 60px;
        color: var(--primary-color);
    }

    /* Force black color on all text inside card-body */
    .card-body * {
        color: var(--primary-color) !important;
    }

    /* Large headings inside card */
    .card-body h1,
    .card-body h2,
    .card-body h3,
    .card-body .display-1,
    .card-body .display-2,
    .card-body .display-3,
    .card-body .display-4 {
        color: var(--primary-color) !important;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .page-title {
            font-size: 2rem;
        }

        .section-title {
            font-size: 1.25rem;
        }

        .card-body {
            padding: 1.5rem;
        }

        .card-icon {
            width: 50px;
            height: 50px;
            font-size: 1.25rem;
        }

        .card-title {
            font-size: 1.5rem;
        }

        .icon-big {
            font-size: 1.5rem;
            height: 50px;
        }
    }
</style>

<div class="content">
