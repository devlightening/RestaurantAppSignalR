    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<!-- Font Awesome ve Ek Stiller -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap" rel="stylesheet">

<style>
    /* CSS Değişkenleri - Daha Profesyonel ve Canlı Palet */
    :root {
        --primary-color: #4A90E2; /* Canlı Mavi */
        --secondary-color: #50E3C2; /* Turkuaz Yeşili */
        --accent-purple: #8A2BE2; /* Mor vurgu */
        --text-dark: #2c3e50; /* Koyu Gri Mavi */
        --text-medium: #6c7a89; /* Orta Gri Mavi */
        --text-light: #95a5a6; /* Açık Gri Mavi */
        --bg-light: #f4f6f9; /* Çok Açık Gri Arka Plan */
        --card-bg: #ffffff; /* Beyaz Kart Arka Planı */
        --border-light: #e0e6ed; /* Hafif Gri Kenarlık */
        --shadow-light: rgba(0, 0, 0, 0.08); /* Hafif Gölge */
        --shadow-medium: rgba(0, 0, 0, 0.15); /* Orta Gölge */
        --gradient-start: #6a11cb; /* Mor Gradient Başlangıcı */
        --gradient-end: #2575fc; /* Mavi Gradient Sonu */
    }

    /* Genel Body Stilleri */
    body {
        font-family: 'Roboto', sans-serif; /* Daha modern ve okunabilir font */
        color: var(--text-dark);
        background: linear-gradient(135deg, var(--gradient-start) 0%, var(--gradient-end) 100%);
        min-height: 100vh;
        padding: 3rem 0; /* Üst ve alttan boşluk */
        display: flex;
        justify-content: center;
        align-items: flex-start;
        overflow-x: hidden; /* Yatay kaydırmayı engelle */
    }

    .content {
        width: 100%;
        max-width: 1600px; /* Maksimum genişlik artırıldı */
        padding: 0 2.5rem; /* Yanlardan daha fazla boşluk */
    }

    /* Ortak Stil Bileşenleri */
    .page-header,
    .card,
    .connection-status,
    .section-group {
        background: var(--card-bg);
        border-radius: 20px; /* Daha yuvarlak köşeler */
        box-shadow: 0 10px 30px var(--shadow-light); /* Daha belirgin ama zarif gölge */
        border: 1px solid var(--border-light); /* Hafif kenarlık */
        color: var(--text-dark);
        transition: all 0.3s ease-in-out; /* Daha akıcı geçişler */
    }

    /* Sayfa Başlığı Alanı */
    .page-header {
        padding: 3.5rem; /* Daha fazla padding */
        margin-bottom: 3.5rem; /* Daha fazla boşluk */
        text-align: center;
        position: relative;
        overflow: hidden;
    }
        /* Sayfa Başlığı Animasyonları */
        .page-header::before, .page-header::after {
            content: '';
            position: absolute;
            background: radial-gradient(circle, rgba(255,255,255,0.08) 0%, transparent 70%);
            z-index: 1;
        }

        .page-header::before {
            top: -60px;
            left: -60px;
            width: 220px;
            height: 220px;
            animation: rotate 18s linear infinite;
        }

        .page-header::after {
            bottom: -40px;
            right: -40px;
            width: 180px;
            height: 180px;
            animation: rotate 12s linear infinite reverse;
        }
    @@keyframes rotate {
        from

    {
        transform: rotate(0deg);
    }

    to {
        transform: rotate(360deg);
    }

    }

    .page-title {
        font-weight: 900; /* Daha kalın font */
        font-size: 3.8rem; /* Daha büyük başlık */
        margin: 0;
        color: var(--primary-color);
        text-shadow: 2px 2px 5px rgba(0,0,0,0.1);
        position: relative;
        z-index: 2;
    }

        .page-title i {
            margin-right: 1rem; /* İkon ve yazı arasına belirgin boşluk */
            color: var(--accent-purple); /* İkon rengi */
        }

    /* Bölüm Başlıkları */
    .section-title {
        font-weight: 700;
        font-size: 2.2rem; /* Daha büyük başlık */
        margin-bottom: 3rem; /* Daha fazla boşluk */
        padding-left: 1.8rem;
        border-left: 7px solid var(--primary-color); /* Daha kalın ve belirgin çizgi */
        color: var(--text-dark);
        text-shadow: 1px 1px 2px rgba(0,0,0,0.03);
    }

        .section-title i {
            margin-right: 0.8rem; /* İkon ve yazı arasına boşluk */
            color: var(--primary-color);
        }

    /* Kart Stilleri */
    .card {
        border: none; /* Varsayılan Bootstrap kenarlığını kaldır */
        margin-bottom: 2.5rem;
        transition: transform 0.4s cubic-bezier(0.25, 0.8, 0.25, 1), box-shadow 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
        cursor: pointer;
    }

        .card:hover {
            transform: translateY(-8px) scale(1.01); /* Daha belirgin hareket */
            box-shadow: 0 18px 50px var(--shadow-medium); /* Daha büyük gölge */
        }

        /* Kart Üst Çizgisi Renkleri */
        .card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 7px; /* Daha kalın çizgi */
            background: linear-gradient(90deg, var(--card-color), transparent);
            z-index: 1;
            border-top-left-radius: 20px;
            border-top-right-radius: 20px;
        }

    .card-info::before {
        --card-color: var(--primary-color);
    }

    .card-primary::before {
        --card-color: var(--primary-color);
    }

    .card-success::before {
        --card-color: var(--secondary-color);
    }

    .card-warning::before {
        --card-color: #f39c12;
    }
    /* Turuncu */
    .card-danger::before {
        --card-color: #e74c3c;
    }
    /* Kırmızı */
    .card-secondary::before {
        --card-color: var(--text-medium);
    }

    .card-dark::before {
        --card-color: var(--text-dark);
    }

    /* Kart İçeriği */
    .card-body {
        padding: 3.5rem; /* Daha fazla padding */
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

    /* Kart İkonları */
    .card-icon {
        width: 90px;
        height: 90px; /* Daha büyük ikon */
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.8rem; /* Daha büyük ikon fontu */
        margin-bottom: 2.5rem; /* Daha fazla boşluk */
        color: white;
        box-shadow: 0 8px 20px rgba(0,0,0,0.2); /* İkonlara daha belirgin gölge */
        background: linear-gradient(135deg, var(--icon-gradient-start), var(--icon-gradient-end));
    }

    .card-info .card-icon, .card-primary .card-icon {
        --icon-gradient-start: #4A90E2;
        --icon-gradient-end: #77B3F7;
    }

    .card-success .card-icon {
        --icon-gradient-start: #50E3C2;
        --icon-gradient-end: #8AF0D0;
    }

    .card-warning .card-icon {
        --icon-gradient-start: #f39c12;
        --icon-gradient-end: #f7b762;
    }

    .card-danger .card-icon {
        --icon-gradient-start: #e74c3c;
        --icon-gradient-end: #f07e73;
    }

    .card-secondary .card-icon, .card-dark .card-icon {
        --icon-gradient-start: #6c7a89;
        --icon-gradient-end: #a5b1c2;
    }

    /* Kart Kategori Metni */
    .card-category {
        font-size: 1.2rem; /* Daha büyük kategori fontu */
        font-weight: 600;
        margin-bottom: 1.2rem; /* Daha fazla boşluk */
        text-transform: uppercase;
        letter-spacing: 1.2px; /* Harf aralığı */
        color: var(--text-medium) !important; /* Daha yumuşak renk */
    }

    /* Kart Başlık (Sayı) Metni */
    .card-title {
        font-size: 3.5rem; /* Daha büyük sayı fontu */
        font-weight: 900;
        margin: 0;
        color: var(--text-dark);
        text-shadow: 2px 2px 6px rgba(0,0,0,0.1);
    }

    /* Bölüm Grupları */
    .section-group {
        padding: 4.5rem; /* Daha fazla padding */
        margin-bottom: 4.5rem; /* Daha fazla boşluk */
        border-radius: 25px; /* Daha yuvarlak köşeler */
    }

    /* Bağlantı Durumu Kutusu */
    .connection-status {
        padding: 3rem; /* Daha fazla padding */
        text-align: center;
        margin-top: 5rem; /* Daha fazla boşluk */
        border-radius: 25px;
        background: var(--card-bg);
        box-shadow: 0 10px 30px var(--shadow-light);
        border: 1px solid var(--border-light);
    }

        .connection-status h5 {
            font-weight: 700;
            font-size: 1.8rem;
            color: var(--text-dark);
            margin-bottom: 1.5rem;
        }

            .connection-status h5 i {
                margin-right: 0.8rem;
                color: var(--primary-color);
            }

    /* Bağlantı Durumu Rozeti */
    .badge-info {
        background: linear-gradient(135deg, var(--primary-color), var(--accent-purple));
        color: white;
        padding: 1.2rem 3rem; /* Daha büyük padding */
        border-radius: 40px; /* Daha yuvarlak */
        font-weight: 700;
        font-size: 1.3rem; /* Daha büyük font */
        box-shadow: 0 6px 20px rgba(74, 144, 226, 0.4);
        transition: all 0.4s ease;
        display: inline-flex;
        align-items: center;
        gap: 1rem; /* İkon ve yazı arasına boşluk */
    }

        .badge-info:hover {
            transform: scale(1.07);
            box-shadow: 0 10px 30px rgba(74, 144, 226, 0.6);
        }

    .pulse {
        animation: pulse 1.5s infinite cubic-bezier(0.4, 0, 0.6, 1); /* Daha belirgin ve yumuşak pulse */
    }

    @@keyframes pulse {
        0%

    {
        transform: scale(1);
        box-shadow: 0 0 0 0 rgba(74, 144, 226, 0.7);
    }

    70% {
        transform: scale(1.04);
        box-shadow: 0 0 0 20px rgba(74, 144, 226, 0);
    }

    100% {
        transform: scale(1);
        box-shadow: 0 0 0 0 rgba(74, 144, 226, 0);
    }

    }

    /* Tüm kart body içindeki metinleri zorla primary-text-color yap */
    .card-body * {
        color: var(--text-dark) !important;
    }

    /* Büyük başlıklar için */
    .card-body h1,
    .card-body h2,
    .card-body h3,
    .card-body .display-1,
    .card-body .display-2,
    .card-body .display-3,
    .card-body .display-4 {
        color: var(--text-dark) !important;
    }

    /* Responsive Ayarlamalar */
    @@media (max-width: 1400px) {
        .content {
            padding: 0 2rem;
        }

        .page-title {
            font-size: 3.2rem;
        }

        .section-title {
            font-size: 2rem;
        }

        .card-body {
            padding: 3rem;
        }

        .card-icon {
            width: 80px;
            height: 80px;
            font-size: 2.5rem;
            margin-bottom: 2rem;
        }

        .card-title {
            font-size: 3rem;
        }

        .section-group {
            padding: 4rem;
        }

        .badge-info {
            font-size: 1.2rem;
            padding: 1rem 2.5rem;
        }
    }

    @@media (max-width: 1200px) {
        .content {
            padding: 0 1.5rem;
        }

        .page-title {
            font-size: 2.8rem;
        }

        .section-title {
            font-size: 1.8rem;
            margin-bottom: 2.5rem;
        }

        .card-body {
            padding: 2.5rem;
        }

        .card-icon {
            width: 70px;
            height: 70px;
            font-size: 2.2rem;
            margin-bottom: 1.8rem;
        }

        .card-title {
            font-size: 2.8rem;
        }

        .section-group {
            padding: 3.5rem;
        }

        .connection-status {
            padding: 2.5rem;
            margin-top: 4rem;
        }

        .badge-info {
            font-size: 1.1rem;
            padding: 0.9rem 2.2rem;
            gap: 0.8rem;
        }
    }

    @@media (max-width: 992px) {
        body {
            padding: 2rem 0;
        }

        .page-title {
            font-size: 2.4rem;
        }

        .section-title {
            font-size: 1.6rem;
            margin-bottom: 2rem;
            padding-left: 1.5rem;
            border-left-width: 6px;
        }

        .card-body {
            padding: 2rem;
        }

        .card-icon {
            width: 60px;
            height: 60px;
            font-size: 2rem;
            margin-bottom: 1.5rem;
        }

        .card-title {
            font-size: 2.5rem;
        }

        .section-group {
            padding: 3rem;
        }

        .connection-status h5 {
            font-size: 1.6rem;
        }

        .badge-info {
            font-size: 1rem;
            padding: 0.8rem 2rem;
            gap: 0.7rem;
        }
    }

    @@media (max-width: 768px) {
        body {
            padding: 1rem 0;
        }

        .content {
            padding: 0 1rem;
        }

        .page-header {
            padding: 2.5rem;
            margin-bottom: 2.5rem;
        }

        .page-title {
            font-size: 2rem;
        }

        .section-title {
            font-size: 1.4rem;
            margin-bottom: 1.5rem;
            padding-left: 1rem;
            border-left-width: 5px;
        }

        .card-body {
            padding: 1.5rem;
        }

        .card-icon {
            width: 50px;
            height: 50px;
            font-size: 1.8rem;
            margin-bottom: 1rem;
        }

        .card-title {
            font-size: 2rem;
        }

        .card-category {
            font-size: 0.95rem;
            margin-bottom: 0.8rem;
        }
        /* Tüm sütunlar mobil görünümde tam genişlikte */
        .col-md-3, .col-md-4, .col-md-6 {
            flex: 0 0 100%;
            max-width: 100%;
        }

        .section-group {
            padding: 2rem;
            margin-bottom: 2rem;
        }

        .connection-status {
            padding: 2rem;
            margin-top: 3rem;
        }

            .connection-status h5 {
                font-size: 1.4rem;
            }

        .badge-info {
            font-size: 0.9rem;
            padding: 0.7rem 1.8rem;
            gap: 0.6rem;
        }
    }

    @@media (max-width: 576px) {
        .page-header {
            padding: 1.8rem;
        }

        .page-title {
            font-size: 1.6rem;
            line-height: 1.3;
        }

        .section-title {
            font-size: 1.2rem;
            padding-left: 0.8rem;
            margin-bottom: 1rem;
        }

        .card-body {
            padding: 1.2rem;
        }

        .card-icon {
            width: 45px;
            height: 45px;
            font-size: 1.5rem;
            margin-bottom: 0.8rem;
        }

        .card-title {
            font-size: 1.8rem;
        }

        .card-category {
            font-size: 0.8rem;
        }

        .section-group {
            padding: 1.5rem;
        }

        .connection-status {
            padding: 1.5rem;
        }

            .connection-status h5 {
                font-size: 1.2rem;
            }

        .badge-info {
            font-size: 0.85rem;
            padding: 0.6rem 1.5rem;
            gap: 0.5rem;
        }
    }
</style>

