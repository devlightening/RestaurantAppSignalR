<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SignalRWebUI</title>

    <!-- Temanızın ana CSS dosyaları -->
    <link rel="stylesheet" href="~/Ready-Bootstrap-Dashboard/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" />
    <link rel="stylesheet" href="~/Ready-Bootstrap-Dashboard/assets/css/ready.css" />
    <link rel="stylesheet" href="~/Ready-Bootstrap-Dashboard/assets/css/demo.css" />

    <!-- Font Awesome ve Line Awesome CDN'den yüklendi -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/line-awesome/1.3.0/line-awesome/css/line-awesome.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons (tema ikonları için) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- site.css ve SignalRWebUI.styles.css gibi kendi özel CSS'leriniz -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SignalRWebUI.styles.css" asp-append-version="true" />

    @RenderSection("Styles", required: false) <!-- Sayfaya özgü stil bölümleri -->
</head>
<body>
    <div class="wrapper">
        @await Component.InvokeAsync("_LayoutNavbarComponentPartial")
        @await Component.InvokeAsync("_LayoutSidebarComponentPartial")

        <div class="main-panel">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
            @await Component.InvokeAsync("_LayoutFooterComponentPartial")
        </div>
    </div>

    <!-- jQuery ve Bootstrap JS CDN'den yüklendi (Diğer tüm scriptlerden önce) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>

    <!-- SignalR scripti doğru yolda eklendi -->
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>

    <!-- jQuery eklentisi olan scrollbar scripti eklendi -->
    <script src="~/Ready-Bootstrap-Dashboard/assets/js/plugin/jquery.scrollbar/jquery.scrollbar.min.js"></script>

    <!-- Tema scriptleri ve diğer özel scriptler (SignalR ve eklentilerden sonra) -->
    @await Component.InvokeAsync("_LayoutScriptComponentPartial")

    <!-- Isotope ve ona bağlı scriptler, jQuery yüklendikten sonra yüklenecek -->
    <script src="~/lib/isotope/isotope.pkgd.min.js"></script>
    <script>
        $(window).on('load', function () {
            var $grid = $('.grid').isotope({
                itemSelector: '.all',
                layoutMode: 'fitRows'
            });

            $('.filters_menu li').on('click', function () {
                var filterValue = $(this).attr('data-filter');
                $grid.isotope({ filter: filterValue });
                $('.filters_menu li').removeClass('active');
                $(this).addClass('active');
            });
        });
    </script>

    @RenderSectionAsync("Scripts", required: false) <!-- Sayfaya özgü script bölümleri -->

</body>
</html>
