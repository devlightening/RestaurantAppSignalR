<!-- Bildirim Scripti -->
<script>
    $(document).ready(function () {
        $('#displayNotif').on('click', function () {
            const placementFrom = $('#notify_placement_from').val();
            const placementAlign = $('#notify_placement_align').val();
            const state = $('#notify_state').val();
            const style = $('#notify_style').val();

            const content = {
                message: 'Bootstrap notify kullanılarak gösterilen örnek bildirim.',
                title: 'Bildirim Başlığı',
                icon: (style === 'withicon') ? 'la la-bell' : 'none',
                url: 'index.html',
                target: '_blank'
            };

            $.notify(content, {
                type: state,
                placement: {
                    from: placementFrom,
                    align: placementAlign
                },
                delay: 2000,
                timer: 500,
            });
        });
    });
</script>
