<style>
	#notificationcount {
		background-color: #dc3545;
		color: white;
		font-size: 12px;
		padding: 2px 6px;
		border-radius: 12px;
		position: absolute;
		top: 10px;
		right: 0;
		display: none;
		min-width: 18px;
		text-align: center;
	}

	.notif-center a {
		display: flex;
		align-items: center;
		padding: 10px;
		text-decoration: none;
		border-bottom: 1px solid #f1f1f1;
		transition: background-color 0.2s ease;
	}

		.notif-center a:hover {
			background-color: #f8f9fa;
		}

	.notif-center .notif-content {
		margin-left: 10px;
	}

		.notif-center .notif-content span.block {
			font-weight: 500;
			color: #333;
		}

		.notif-center .notif-content span.time {
			font-size: 12px;
			color: #888;
		}

	.notif-center .info,
	.notif-center .warning,
	.notif-center .success,
	.notif-center .danger {
		width: 35px;
		height: 35px;
		border-radius: 50%;
		display: flex;
		justify-content: center;
		align-items: center;
		color: white;
	}

	.notif-center .info {
		background-color: #17a2b8;
	}

	.notif-center .warning {
		background-color: #ffc107;
	}

	.notif-center .success {
		background-color: #28a745;
	}

	.notif-center .danger {
		background-color: #dc3545;
	}
</style>


<div class="main-header">
	<script type="text/javascript">

		$(document).ready(() => {

			var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7000/signalrhub").build();
			$("#connstatus").text(connection.state);
			connection.start().then(() => {
				$("#connstatus").text(connection.state);
				setInterval(() => {
					connection.invoke("SendNotification");
				}, 1000);
			}).catch((err) => { console.log(err) });


			connection.on("ReceiveNotificationCountByFalse", (value) => {
				$("#notificationcount").text(value);
			});

			connection.on("ReceiveNotificationListByFalse", (value) => {
				console.log(value);
				$("#notilist").empty();
				for (var i = 0; i < value.length;i++){
					$("#notilist").append(`<a href="#">
					<div class="${value[i].type}"><i class="${value[i].icon}"></i></div>
					<div class="notif-content">
					<span class="block">
					${value[i].description}
					</span>
					<span class="time">${value[i].date}</span>
					</div>
					</a>
					`)
				};
			});
		});

	</script>

